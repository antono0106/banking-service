<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                   https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <changeSet id="0" author="anton">
        <createTable ifNotExists="true" tableName="accounts">
            <column name="id" type="BIGINT" startWith="1000100" incrementBy="1">
                <constraints primaryKey="true"/>
            </column>
            <column name="first_name" type="varchar(50)">
                <constraints nullable="false"/>
            </column>
            <column name="last_name" type="varchar(50)">
                <constraints nullable="false"/>
            </column>
            <column name="email" type="varchar(50)">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="balance" type="BIGINT" defaultValue="0"/>
            <column name="cents" type="smallint" defaultValue="0"/>
        </createTable>

        <sql>
            ALTER TABLE accounts ADD CONSTRAINT chk_balance_non_negative (balance &gt;= 0);
            ALTER TABLE accounts ADD CONSTRAINT chk_cents_non_negative_and_not_gt_100 (cents &gt;= 0 AND cents &lt;= 99);
        </sql>
    </changeSet>
</databaseChangeLog>